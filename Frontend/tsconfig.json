{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
 //   "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": "src",
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "__tests__"
  ],
  "types": [
    "node",
    "webpack",
    "react",
    "react-dom"
  ],
  "include": [
    "**/*.ts"
  ],
  "compileOnSave": false
}
